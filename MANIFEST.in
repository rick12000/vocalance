# Include essential files
include LICENSE
include README.md
include pyproject.toml

# Include UI assets
recursive-include assets/logo *
recursive-include assets *

# Exclude build artifacts and cache
prune build
prune dist
prune *.egg-info
prune __pycache__
prune .pytest_cache
prune cache
prune .git*
prune .cursor
prune .vscode
prune .conda

# Exclude large model files
exclude *.gguf
exclude vosk-model-*