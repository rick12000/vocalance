# Include essential files
include LICENSE
include README.md
include pyproject.toml

# Include UI assets (now in vocalance/app/assets/)
recursive-include vocalance/app/assets *

# Exclude build artifacts and cache
prune build
prune dist
prune *.egg-info
prune __pycache__
prune .pytest_cache
prune cache
prune .git*
prune .cursor
prune .vscode
prune .conda

# Exclude large model files from root level only (not in vocalance/app/assets/)
global-exclude *.gguf
# Note: vosk models in vocalance/app/assets/ will be included via recursive-include above
